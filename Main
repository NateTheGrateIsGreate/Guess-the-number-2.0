class users:

    def __init__(self, name, score):
        
        self.name = name

        self.score = score

    def assign_score(self, score):

        self.score = score

    def display_properties(self):

        print("Properties of the User:")

        print("Name:", self.name)

        print("Score:", self.score)

import time

import random

error = 1

loop = 1

gameLoop = 1

aftergameloop = 1

leaderboardloop = 1

loop2 = 1

loop3 = 1

user_dict = {}  # Dictionary to store user instances

print("""
      
      Welcome to Guess the Number 2.0

      """)

time.sleep(2)

while loop < 2:

    guess_count = 0  # Initialize guess counter

    random_number = random.randint(1, 100)  # Generate a random number between 1 and 100

    gameLoop = 2
    leaderboardloop = 2
    aftergameloop = 2

    print("""
      
      Would you like to play(p) or see the leaderboard(l)?

      """)

    user_choice = input()  # Store the input in a variable

    if user_choice == "p":

        print("""
      
        Starting...

       """)

        time.sleep(2)

        print("""
      
        Please input your name

        """)

        name_input = input()

        print("")

        print(f"Welcome {name_input}")

        user1 = users(name_input, 0)
        user_dict[name_input] = user1  # Add user to dictionary

        time.sleep(2)

        gameLoop = 1

    elif user_choice == "l":  # Use elif to avoid multiple input prompts

        print("Loading leaderboard....")

        time.sleep(2)

        leaderboardloop = 1

    while leaderboardloop < 2:

     print("========Leaderboard==========")

     time.sleep(2)

     f = open("SaveFile.txt", "r")

     read_values = f.read() #open and read the file

     split_values = read_values.split(",") #separate the data by commas and save the data to a list

     leaderboard = [] #open and read the file

     for i in range(0, len(split_values) - 1, 2):

         name = split_values[i].strip()

         score = int(split_values[i + 1].strip())

         leaderboard.append((name, score))

     leaderboard.sort(key=lambda x: x[1], reverse=True)

     leaderboard_str = "\n".join([f"Name: {name}, Score: {score}" for name, score in leaderboard])  # Join the sorted leaderboard into a string

     print(leaderboard_str) #print the leaderboard

     print("\n") #print a new line

     leaderboardloop = 2

    while gameLoop < 2:

        print("""
      
        Please enter a number between 1 and 100

        """)

        try:
            number = int(input())  # Get user input and convert to integer
        except ValueError:
            print("Invalid input. Please enter a valid number.")
            continue  # Skip the rest of the loop and prompt for input again

        guess_count += 1  # Increment guess counter

        if number > random_number:

            print("""
            The number is lower!
            """)

            time.sleep(1)

        elif number < random_number:

            print("""
            The number is higher!
            """)

            time.sleep(1)

        if number == random_number:

            print("""
      
            You guessed the number!

            """)

            time.sleep(2)

            print(f"The number was {random_number}")

            gameLoop = 2

            aftergameloop = 1

        else:

            print("""
            Try again!
            """)

            gameLoop = 1

        if guess_count >= 10:  # Check if guess count has reached 10

            print("""
      
            You've used all your guesses. Game over!

            """)

            time.sleep(2)

            print(f"The number was {random_number}")

            time.sleep(2)

            gameLoop = 2

            aftergameloop = 1

    while aftergameloop < 2:

        score = 10 - guess_count

        user1.assign_score(score)

        print("""
      
        Here is your score:

        """)

        print(f"{score}")

        print("""
      
        Would you like to play again? (y/n)

        """)

        play_again = input()  # Store the input in a variable

        if play_again == "y":

            print("Starting...")

            time.sleep(2)

            aftergameloop = 2  

            gameLoop = 1

        elif play_again == "n":

            print("Saving...")

            f = open("SaveFile.txt", "a")

            f.write(f"\nName: {user1.name}, Score: {score}")  # Add a newline character at the beginning

            f.close()

            loop = 2

            time.sleep(2)

            gameLoop = 2

            aftergameloop = 2

            print("========Leaderboard==========")

            time.sleep(2)

            f = open("SaveFile.txt", "r")

            read_values = f.read() #open and read the file

            split_values = read_values.split(",") #separate the data by commas and save the data to a list

            leaderboard = [] #open and read the file

            for i in range(0, len(split_values) - 1, 2):

                name = split_values[i].strip()

                score = int(split_values[i + 1].strip())

                leaderboard.append((name, score))

            leaderboard.sort(key=lambda x: x[1], reverse=True)

            leaderboard_str = "\n".join([f"Name: {name}, Score: {score}" for name, score in leaderboard])  # Join the sorted leaderboard into a string

            print(leaderboard_str) #print the leaderboard

            print("\n") #print a new line



